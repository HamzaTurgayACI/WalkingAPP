<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        tools:context=".view.DashboardActivity">

        <ImageView
            android:id="@+id/imgAnimatedLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo"
            android:contentDescription="Animasyonlu Logo"
            android:layout_gravity="center_horizontal"/>

        <!-- Kullanıcı İstatistik Kartları -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_total_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Mesafe: 0 km"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Süre: 0 dk"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_activity_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Aktivite Sayısı: 0"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_start_activity"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Yeni Aktivite Başlat"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"
                app:backgroundTint="#19A0E8"
                android:textColor="@color/black"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                android:indeterminate="true"
                android:layout_marginTop="16dp"/>



            <Button
                android:id="@+id/btn_refresh"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Yenile"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@color/green"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_view_history"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Geçmiş Aktiviteler"
                android:textAllCaps="false"
                app:backgroundTint="@color/tertiary"
                android:layout_marginBottom="12dp"
                app:strokeColor="@color/tertiary"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_logout"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Çıkış Yap"
                android:textAllCaps="false"
                app:backgroundTint="?attr/colorError"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
